      = stylesheet_link_tag 'ie.css', :media => 'screen, projection'
    = javascript_include_tag :defaults
    = csrf_meta_tag
  %body{:class => "#{controller_name}_#{action_name}"}
    #header
      #logo
        = link_to root_path do
          = image_tag 'logo-vote-de-valeur.png', :size => "157x155"
      #user_sign_in
        - if user_signed_in? && (!@user_signed_out)
          = current_user.email
          |
          = link_to t(:sign_out), destroy_user_session_path
      .clear
    #container
      = yield
    .clear
    #dev
