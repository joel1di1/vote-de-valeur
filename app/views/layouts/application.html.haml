-# coding: utf-8
!!!5
%html
  %head
    %title VoteDeValeur
    = stylesheet_link_tag 'screen.css', :media => 'screen, projection'
    /[if lt IE 9]
      = stylesheet_link_tag 'ie.css', :media => 'screen, projection'
    = javascript_include_tag :defaults
    = csrf_meta_tag
  %body{:class => "#{controller_name}_#{action_name}"}
    #header
      #logo
        = link_to root_path do
          = image_tag 'logo-vote-de-valeur.png', :size => "157x155"
      #user_sign_in
        - if user_signed_in?
          = current_user.email
          |
          = link_to t(:sign_out), destroy_user_session_path
        - else
          = link_to "Déjà enregistré ?", users_resend_instructions_path
      .clear
    #messages
      - if !flash.empty?
        - flash.each do |key, value|
          %p(id="flash_#{key}" class=key)
            = value
    #container
      = yield
    .clear
    #dev
      #date_election
        L'élection commence
        = DateHelper.format_start
        et se finit le
        = DateHelper.format_end
      #configuration
        = link_to "configuration", configurations_path
  :javascript
    var _gaq = _gaq || [];
    _gaq.push(['_setAccount', 'UA-23743742-1']);
    _gaq.push(['_trackPageview']);

    (function() {
      var ga = document.createElement('script'); ga.type = 'text/javascript'; ga.async = true;
      ga.src = ('https:' == document.location.protocol ? 'https://ssl' : 'http://www') + '.google-analytics.com/ga.js';
      var s = document.getElementsByTagName('script')[0]; s.parentNode.insertBefore(ga, s);
    })();

